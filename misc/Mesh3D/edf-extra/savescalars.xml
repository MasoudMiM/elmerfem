<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE edf>
<edf version="1.0" >
   <PDE Name="Save Scalars" >
      <Name>SaveScalars</Name>
      <Solver>
         <Procedure Widget="File" >
            <FileName Widget="String" > SaveData </FileName>
            <Function Widget="String" > SaveScalars </Function>
         </Procedure>
         <Parameter Widget="Edit" >
            <Name> Filename </Name>
            <Type> String </Type>
            <Whatis> The name of the file to save results. </Whatis>
         </Parameter> 
          <Parameter Widget="CheckBox" >
            <Name> File Append </Name>
            <Type> Logical </Type>
            <Whatis> Append files when calling multiple times.  False is the default. </Whatis>
         </Parameter>
 
         <Parameter Widget="Combo">
            <Name> Operator </Name>
            <Type> String </Type>
            <Whatis>Operator operating on the variable.</Whatis>
            <Item Type="Active" >
               <Name> max </Name>
            </Item>
            <Item>
               <Name> min </Name>
            </Item>
            <Item>
               <Name> max abs </Name>
            </Item>
            <Item>
               <Name> min abs </Name>
            </Item>
            <Item>
               <Name> mean </Name>
            </Item>
            <Item>
               <Name> variance </Name>
            </Item>
            <Item>
               <Name> deviation </Name>
            </Item>
            <Item>
               <Name> volume </Name>
            </Item>
            <Item>
               <Name> int mean </Name>
            </Item>
            <Item>
               <Name> int variance </Name>
            </Item>
            <Item>
               <Name> boundary sum </Name>
            </Item>
            <Item>
               <Name> boundary dofs </Name>
            </Item>
              <Item>
               <Name> boundary mean </Name>
            </Item>
            <Item>
               <Name> boundary min </Name>
            </Item>
            <Item>
               <Name> boundary max </Name>
            </Item>
          </Parameter>

         <Parameter Widget="Edit" >
            <Name> Variable 1 </Name>
            <Type> String </Type>
            <Whatis> The name of the 1st object variable. </Whatis>
         </Parameter> 
         <Parameter Widget="Edit" >
            <Name> Operator 1 </Name>
            <Type> String </Type>
            <Whatis> The name of the 1st operator. </Whatis>
         </Parameter> 
         <Parameter Widget="Edit" >
            <Name> Coefficient 1 </Name>
            <Type> String </Type>
            <Whatis> The name of the 1st coefficient (if needed). </Whatis>
         </Parameter> 
         <Parameter Widget="Edit" >
            <Name> Variable 2 </Name>
            <Type> String </Type>
            <Whatis> The name of the 2nd object variable. </Whatis>
         </Parameter> 
         <Parameter Widget="Edit" >
            <Name> Operator 2 </Name>
            <Type> String </Type>
            <Whatis> The name of the 2nd operator. </Whatis>
         </Parameter> 
         <Parameter Widget="Edit" >
            <Name> Coefficient 2 </Name>
            <Type> String </Type>
            <Whatis> The name of the 2nd coefficient (if needed). </Whatis>
         </Parameter> 
         <Parameter Widget="Edit" >
            <Name> Variable 3 </Name>
            <Type> String </Type>
            <Whatis> The name of the 3rd object variable. </Whatis>
         </Parameter> 
         <Parameter Widget="Edit" >
            <Name> Operator 3 </Name>
            <Type> String </Type>
            <Whatis> The name of the 3rd operator. </Whatis>
         </Parameter> 
         <Parameter Widget="Edit" >
            <Name> Coefficient 3 </Name>
            <Type> String </Type>
            <Whatis> The name of the 3rd coefficient (if needed). </Whatis>
         </Parameter> 
         <Parameter Widget="Edit" >
            <Name> Save Points </Name>
            <Type> Integer </Type>
            <Whatis> Save data on given node indexes. </Whatis>
          </Parameter>
          <Parameter Widget="Edit" >
            <Name> Save Coordinates </Name>
            <Type> Real </Type>
            <Whatis> Save data on given coordinates. </Whatis>
         </Parameter> 
          <Parameter Widget="CheckBox" >
            <Name> Exact Coordinates </Name>
            <Type> Logical </Type>
            <Whatis> Use exact coordinates for saving rather than nearest.  False is the default. </Whatis>
         </Parameter>
         <Parameter Widget="CheckBox" >
            <Name> Save Flux </Name>
            <Type> Logical </Type>
            <Whatis> Save heat Flux.  False is the default. </Whatis>
         </Parameter>
         <Parameter Widget="Edit" >
            <Name> Flux Variable </Name>
            <Type> String </Type>
            <Whatis> The variable for flux computation. </Whatis>
         </Parameter>
         <Parameter Widget="Edit" >
            <Name> Flux Coefficient </Name>
            <Type> String </Type>
            <Whatis> The coefficient for flux computation. </Whatis>
         </Parameter>
      </Solver>
      <BoundaryCondition>
       <Parameter Widget="Label" > <Name> Apply operators  </Name> </Parameter>
          <Parameter Widget="CheckBox" >
            <Name> Save Scalars </Name>
	    <Type> Logical </Type>
            <Whatis> Activate the computation of boundary related information. </Whatis>
         </Parameter>
      </BoundaryCondition>
   </PDE>
</edf>
