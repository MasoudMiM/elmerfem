#!/bin/sh -f

if test "$ELMER_LIB" = ""; then
  if  test "$ELMER_HOME" = ""; then
     INCLUDE=/tmp/jpr/share/elmersolver/include
  else
     INCLUDE=$ELMER_HOME/share/elmersolver/include
  fi
else
  INCLUDE=$ELMER_LIB/../include
fi

cmd="pgf90 -O -m64 -fPIC -fPIC -I. -I$INCLUDE -m64 -fPIC -shared $*"
printf "%s " $cmd
printf "\n"
pgf90 -O -m64 -fPIC -fPIC -I. -I$INCLUDE -m64 -fPIC -shared $*

