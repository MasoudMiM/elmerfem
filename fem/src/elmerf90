#!/bin/sh -f

if test "$ELMER_LIB" = ""; then
  if  test "$ELMER_HOME" = ""; then
     INCLUDE=/home/vierinen/intel/share/elmersolver/include
  else
     INCLUDE=$ELMER_HOME/share/elmersolver/include
  fi
else
  INCLUDE=$ELMER_LIB/../include
fi

cmd="ifort -I$INCLUDE  -shared $*"
printf "%s " $cmd
printf "\n"
ifort -I$INCLUDE  -shared $*

